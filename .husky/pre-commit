# Block .env files from being committed
if git diff --cached --name-only | grep -E '^(.env|.env\..*)$'; then
  echo "‚ùå ERROR: You are trying to commit a .env file!"
  echo "Secrets should never be committed to the repository."
  echo "Please remove the .env file from your staged changes and try again."
  exit 1
fi

npx lint-staged
